<div id='post_<%= post.id %>' class='reply_to_post post <%= cycle('odd', 'even') -%> row'>
  <a name='post-<%= post.id %>'></a>
  <div class='user col-md-2'>
    <div class='username'>
      <strong><%= link_to_if Forem.user_profile_links, post.user.forem_name, [main_app, post.user] %></strong>
    </div>
    <div class='icon'><%= forem_avatar(post.user, :size => 60) %></div>
  </div>

  <div class='contents col-md-10'>
    <small><time datetime="<%= post.created_at.to_s(:db) -%>"><%= "#{time_ago_in_words(post.created_at)} #{t("ago")}" %></time></small>
    <%= forem_format(post.text) %>
    <% if post.reply_to %>
      <div class='in_reply_to'>
        <%= link_to "#{t("forem.post.in_reply_to")} #{post.reply_to.user.forem_name}", "#post-#{post.reply_to.id}" %>
      </div>
    <% end %>
  </div>
</div>
