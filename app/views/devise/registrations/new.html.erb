<h1>Begin your own Chronicle</h1>

<p>
  To play Myth Chronicles you need to sign up with a valid email address. 
</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name %>
    <%=f.text_field :name, autofocus: true, class: "form-control" %>
    <% if f.object.errors[:name] %>
      <span class="text-danger"><%= f.object.errors[:name].join(", ") %></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control" %>
    <% if f.object.errors[:email] %>
      <span class="text-danger"><%= f.object.errors[:email].join(", ") %></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    <% if f.object.errors[:password] %>
      <span class="text-danger"><%= f.object.errors[:password].join(", ") %></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    <% if f.object.errors[:password_confirmation] %>
      <span class="text-danger"><%= f.object.errors[:password_confirmation].join(", ") %></span>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
