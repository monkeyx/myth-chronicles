      <% unless alert.blank? %>
      <div class="row" ng-if="showAlert">
        <div class="col-lg-12">
          <div class="bs-component">
            <div class="alert alert-dismissible alert-warning">
            <button type="button" class="close" ng-click="hideAlert()">&times;</button>
            <p><%= alert %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>

      <% unless notice.blank? %>
      <div class="row" ng-if="showNotice">
        <div class="col-lg-12">
          <div class="bs-component">
            <div class="alert alert-dismissible alert-info">
                <button type="button" class="close" ng-click="hideNotice()">&times;</button>
                <p><%= notice %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>