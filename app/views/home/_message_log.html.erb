<div ng-controller="MessageLogCtrl">
	<div id="messages" ng-if="character">
		<a id="messagesButton" class="btn btn-default" ng-if="!checked" ng-click="toggle()">
			<i class="fa fa-list"></i>
			<span class="non-mobile">Log</span>
		</a>
	</div>
	<div pageslide ps-open="checked" ps-side="bottom" ps-speed="0.2" ps-auto-close="true">
		<div id="messagesPanel" class="panel panel-default">
	    	<div class="panel-heading">
	    		<h3 class="panel-title"><button type="button" class="btn btn-default" ng-click="toggle()"><i class="fa fa-times"></i></button>&nbsp;Log</h3>
	    	</div>
	    	<div class="panel-body">
	    		<p ng-repeat="alert in alerts" class="text-{{alert.type}}">
					<span ng-bind-html="alert.msg"></span>
				</p>
			</div>
	    </div>
	</div>
</div>