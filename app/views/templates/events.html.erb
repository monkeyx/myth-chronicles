<div ng-if="position" class="panel panel-default" ng-controller="PaginatedEventsCtrl">
	<div class="panel-heading"><strong>Events</strong> 
		<a ng-if="!hide_events_table" ng-click="toggleEventsTable()" class="pull-right"><i class="fa fa-chevron-down"></i></a>
		<a ng-if="hide_events_table" ng-click="toggleEventsTable()" class="pull-right"><i class="fa fa-chevron-up"></i></a>
	</div>
	<table class="table table-striped">
		<tbody ng-if="!hide_events_table">
			<tr ng-repeat="e in events" ng-animate="animate">
				<th>{{e.name}}</th>
				<td>
					<span ng-bind-html="e.summary"></span>
					<br/><small>{{e.game_time.long_display}}</small>
				</td>
			</tr>
			<tr ng-if="events && events.length < 1">
				<td colspan="2" class="text-center">No events to report</td>
			</tr>
		</tbody>
	</table>
	<div class="panel-body" style="{{hide_events_table ? 'display: none;' : ''}}">
		<center>
		 	<bgf-pagination url='events_url' url-params='event_params' collection='events' per-page="10" per-page-presets="" auto-presets="false" reload-page="reloadPage"></bgf-pagination>
		</center>
	</div>
</div>