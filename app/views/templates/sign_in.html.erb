<div class="page-header home-header">
  <div id="home-banner" class="text-center">
    <strong>Myth Chronicles</strong>: A multiplayer game of fantasy strategy on your browser 
    <h1 id="home-title" class="text-center">Resume your Chronicle</h1>
  </div>
</div>

<div id="login" class="home-content">
  <div class="well well-sm">
    <div class="alert alert-danger" role="alert" ng-show="error">
      {{error}}
    </div>

    <form ng-submit="submitLogin(loginForm)" role="form" ng-init="loginForm = {}">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email"
               name="email"
               id="email"
               ng-model="loginForm.email"
               required="required"
               class="form-control">
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password"
               name="password"
               id="password"
               ng-model="loginForm.password"
               required="required"
               class="form-control">
      </div>

      <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
    </form>

    <%= link_to "Forgot your password?", "/users/password/new" %>
  </div>
</div>