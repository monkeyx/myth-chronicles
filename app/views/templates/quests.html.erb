<div ng-if="position" class="panel panel-default" ng-controller="PaginatedQuestsCtrl">
	<div class="panel-heading" ng-if="quests && quests.length > 0"><strong>Quests</strong> 
		<a ng-if="!hide_quests_table" ng-click="toggleQuestsTable()" class="pull-right"><i class="fa fa-chevron-down"></i></a>
		<a ng-if="hide_quests_table" ng-click="toggleQuestsTable()" class="pull-right"><i class="fa fa-chevron-up"></i></a>
	</div>
	<table class="table table-striped" ng-if="quests && quests.length > 0">
		<tbody ng-if="!hide_events_table">
			<tr ng-repeat="q in quests" ng-animate="animate">
				<th>{{q.status}}</th>
				<td ng-bind-html="q.description">
				</td>
			</tr>
		</tbody>
	</table>
	<div class="panel-body" style="{{hide_quests_table || !(quests && quests.length < 1) ? 'display: none;' : ''}}">
		<center>
		 	<bgf-pagination url='quests_url' url-params='quests_params' collection='quests' per-page="10" per-page-presets="" auto-presets="false" reload-page="reloadPage"></bgf-pagination>
		</center>
	</div>
</div>